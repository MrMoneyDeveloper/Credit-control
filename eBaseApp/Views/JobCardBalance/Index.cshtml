</div>
@foreach (ContractorJobSheetViewModel data in Model)
{
    using (Html.BeginForm("TechnicianBulkAssign", "Contractor", FormMethod.Post/*, new { id = "ContractorFormId" }*/))
    {

        <div class="modal fade  @data.GroupId" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
             aria-hidden="true">
            <div class="modal-dialog modal-lg" style="max-width: 1200px;">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="myLargeModalLabel">
                            Contractor Assign To Technician : @data.Contractor.Name
                        </h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="modal-body">
                            <div class="card-body">
                                <br />
                                <div class="card-header">
                                    <h6 class="card-title">Jobcard Balance Sheet Contractor/Technician</h6>
                                </div><!-- end card header -->
                                <br />
                                <div class="table-responsive">
                                    <table class="table table-striped" id="table-2">
                                        <thead>
                                            <tr>
                                                <th style="background-color: #1f824c; color: white;">Municipality</th>
                                                <th style="background-color: #1f824c; color: white;">Contractor</th>
                                                <th style="background-color: #1f824c; color: white;">Account Number</th>
                                                <th style="background-color: #1f824c; color: white;">Account Holder</th>
                                                <th style="background-color: #1f824c; color: white;">Action Type</th>
                                                <th style="background-color: #1f824c; color: white;">Issue Date</th>
                                                <th style="background-color: #1f824c; color: white;">JobCard Code</th>
                                                <th style="background-color: #1f824c; color: white;">Status</th>
                                                <th style="background-color: #1f824c; color: white;">Status Description</th>
                                                <th style="background-color: #1f824c; color: white;">Technician</th>
                                                <th style="background-color: #1f824c; color: white;"></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (AllocatedAccount account in data.AllocatedAccounts)
                                            {
                                                var jobcard = ViewHelper.GetBalanceSheet(account.Id);
                                                <tr>
                                                    <td>@Html.Raw(account.R_CC_CUT_OFF_PROCESSING.Municipality)</td>
                                                    <td>@Html.Raw(account.R_CC_CUT_OFF_PROCESSING.ACCOUNT_NO)</td>
                                                    <td>@Html.Raw(account.Contractor.Name)</td>
                                                    <td>@Html.Raw(String.Format("{0} {1}", account.R_CC_CUT_OFF_PROCESSING.INITIALS, account.R_CC_CUT_OFF_PROCESSING.SURNAME))</td>
                                                    <td>@Html.Raw(account.ActionType.Name)</td>
                                                    <td>@Html.Raw(account.CreatedDateTime)</td>
                                                    <td>@Html.Raw(jobcard.JobCardCode)</td>
                                                    <td>@Html.Raw(jobcard.Status?.Name)</td>
                                                    <td>@Html.Raw(jobcard.Status?.Description)</td>
                                                    <td>@Html.Raw($"{jobcard.Technician?.FirstName} {jobcard.Technician?.LastName}")</td>
                                                    <td>
                                                        <input type="button" class="btn btn-sm btn-primary w-sm" value="View" onclick="window.location.href='/JobCardBalance/Details?Id='+@account.Id" />
                                                        @*<a type="btn btn-success" asp-controller="JobCardBalance" asp-action="Detail" asp-route-id="@account.Id" class="btn btn-sm btn-outline-secondary">
                                                                View
                                                            </a>*@
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>


                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}

