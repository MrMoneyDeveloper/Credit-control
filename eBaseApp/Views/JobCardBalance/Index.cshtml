                                            </td>
                                            <td>@Html.Raw(data.Municipality)</td>
                                            <td>@Html.Raw(data.Contractor.Name)</td>
                                            <td>@Html.Raw(data.ActionType.Name)</td>
                                            <td>@Html.Raw(data.AllocationDate)</td>
                                            <td>@Html.Raw(data.Allocated)</td>
                                            <td>@Html.Raw(data.Unassined)</td>
